<div class="col-md-6 offset-md-3">
  <div class="border">
    <h2 class="text-center mt-3">ログイン</h2>
    <div class="text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-md-8 offset-md-2">
          <div class="form-group">
            <%= f.label :idname, "ユーザーID" %>
            <%= f.text_field :idname, autofocus: true, autocomplete: "idname", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="pt-4">
          <%= f.submit "ログイン", class: "btn btn-info" %>
        </div>
      <% end %>

      <section class="mt-3 py-4 border-top">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.hidden_field :idname, :value => "guest" %>
          <%= f.hidden_field :password, :value => 123123 %>
          <%= f.submit "採用担当者様 専用ログイン(管理者ページ)", class: "btn btn-success" %>
        <% end %>
      </section>

      <section class="pb-4 ">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.hidden_field :idname, :value => "book_store" %>
          <%= f.hidden_field :password, :value => "book321" %>
          <%= f.submit "採用担当者様 専用ログイン", class: "btn btn-success" %>
        <% end %>
      </section>
    </div>
  </div>
</div>