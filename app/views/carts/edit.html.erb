<div class="col-md-6 offset-md-3">
  <h2 class="text-center">購入数変更</h2>
  <section>
    <div class="p-4 text-center">
      <% if @cart_item.img? %>
        <%= image_tag @cart_item.img.url, alt: "書籍の画像です。", :width =>"100%" %>
      <% else %>
        <%= image_tag "no-img.png", alt: "画像が登録されていません。", :width =>"100%" %>
      <% end %>
    </div>
    <div class="pl-5">
      <div>タイトル: <%= @cart_item.name %></div>
      <div>著者: <%= @cart_item.author %></div>
      <div>価格: ¥<%= @cart_item.price %></div>
      <div>在庫数: <%= @cart_item.num %></div>
      <div>説明: <%= @cart_item.description %></div>

      <div>
        <%= form_with(model: @cart, url: cart_path, local: true ) do |f| %>
          <div>
            <%= f.label :quantity, "購入数" %>
            <%= f.number_field :quantity %>
          </div>
          <%= f.hidden_field :product_id, :value => @cart_item.id %>
          <div class="text-right">
            <%= f.submit "更新", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>