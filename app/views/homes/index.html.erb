<div class="col-md-10 offset-md-1">
  <div class="text-center">
    <%= image_tag "bookstore.jpg", alt: "本の画像です。", id: "top_img" %>
  </div>

  <div class="container pt-5">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="d-inline-block m-1" >
            <div class="p-2">
              <% if product.img? %>
                <%= image_tag product.img.url, alt: "書籍の画像です。", :size =>'300x180', class: "product_img" %>
              <% else %>
                <%= image_tag "no-img.png", alt: "画像が登録されていません。", :size =>'300x180', class: "product_img" %>
              <% end %>
            </div>
            <div>タイトル: <%= link_to product.name, product_path(product) %></div>
            <div>著者: <%= product.author %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
#top_img{
  /* width: 100%; */
  max-width: 90%;
}

.product_img{
  width: 100%;
  max-width: 300px;
}
</style>